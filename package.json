{
  "name": "dd-softlab-design-lib-workspace",
  "private": true,
  "scripts": {
    "generate-theme-scss": "node ./scripts/generate-theme-scss.mjs",
    "prebuild:lib": "npm run generate-theme-scss",
    "build:lib": "ng build dd-softlab-design-lib --configuration production",
    "build": "npm run build:lib",
    "pack:lib": "npm run build:lib && npm pack ./dist/dd-softlab-design-lib",
    "lint:commits": "commitlint --config commitlint.config.cjs --from HEAD~20 --to HEAD",
    "test:watch": "vitest",
    "test:typecheck": "vitest --typecheck",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@analogjs/vite-plugin-angular": "^2.2.3",
    "@analogjs/vitest-angular": "^2.2.3",
    "@angular-devkit/build-angular": "21.1.0",
    "@angular/cli": "21.1.0",
    "@angular/common": "21.1.0",
    "@angular/compiler": "21.1.0",
    "@angular/compiler-cli": "21.1.0",
    "@angular/core": "21.1.0",
    "@angular/platform-browser-dynamic": "21.1.0",
    "@angular/router": "21.1.0",
    "@commitlint/cli": "^20.4.2",
    "@commitlint/config-conventional": "^20.4.2",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "jsdom": "^28.1.0",
    "ng-packagr": "^21.1.0",
    "semantic-release": "^25.0.3",
    "typescript": "~5.9.3",
    "vitest": "^4.0.18",
    "zone.js": "^0.16.0"
  },
  "sideEffects": false
}
